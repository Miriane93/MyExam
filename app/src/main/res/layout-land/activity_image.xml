<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".activity_image">


        <TextView android:id="@+id/download"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_marginBottom="32pt"
            android:layout_marginTop="20dp"
            android:text="@string/download_title"
            android:background="@drawable/border_style"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/image_url"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/border_style"
            android:autofillHints="image url"
            android:hint="@string/download_hint"
            android:inputType="textUri"
            android:layout_marginBottom="20dp"
            android:padding="8dp" />
        <Button android:id="@+id/button_download"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/download_button"
            android:backgroundTint="@color/bluea"
            android:layout_gravity="center_horizontal"
            android:onClick="Download"/>
        <ImageView android:id="@+id/image_view"
            android:layout_width="400dp"
            android:layout_height="420dp"
            android:layout_marginVertical="40dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

</ScrollView>